{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
        <div class = "jumbotron">
            </br>
            </br>
            </br>
            </br>
            <h3 style="text-align:left"> Articles / Index </h3>
        </div>

<div class="container">
         {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Categorie</th>
                <th>Auteur</th>
                <th>Resume</th>
                <th>Date Cr√©ation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>
                    <a href="{{ path('articles_show',  {id: article.id, slug: article.slug })}}">{{ article.titre }}</a>
                    
                </td>
                <td>{{ article.categorie }}</td>
                <td>{{ article.auteur }}</td>
                <td>{{ article.resume }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('d/m/Y') : '' }}</td>
                <td>
                            <a href="{{ path('articles_edit',  {id: article.id, slug: article.slug }) }}" class="btn btn-info btn-sm">Edit</a> 
                            <a href="{{ path('articles_delete',  {id: article.id })}}"  style="display: inline-block" class="btn btn-danger btn-sm">Suppr</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </br>
        </br>
        </br>
        </br>
        </br>
<p align="right" >
    <a href="{{ path('articles_new') }}">
      <button type="button" class="btn btn-warning btn-sm">Creer un article </button>
    
    </a>
    <div class="pagination">
        {{ knp_pagination_render(articles) }}
    </div>
 </div>
{% endblock %}
