{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Equipe{% endblock %}

{% block body %}

        <div class = "jumbotron">
            </br>
            </br>
            </br>
            </br>
            <h3 style="text-align:left"> Team / Index </h3>
        </div>
    

    <!-- container -->
    <div class="container">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% if not form.vars.valid %}
                <div class="alert alert-danger">
                    Ce message n'apas été envoyé , veuillez respecter les champs obligatoires
                </div>
        {% endif %}
    
        <h3>Identification / {{ equipe.noms }}, {{ equipe.fonction }}</h3>
        </br>

        <!-- Article main content -->
        <article class="col-md-8 maincontent">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Noms</th>
                        <td>{{ equipe.noms }}</td>
                    </tr>
                    <tr>
                        <th>Prenoms</th>
                        <td>{{ equipe.prenoms }}</td>
                    </tr>
                    <tr>
                        <th>Surnoms</th>
                        <td>{{ equipe.surnoms }}</td>
                    </tr>
                    <tr>
                        <th>Fonction</th>
                        <td>{{ equipe.fonction }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ equipe.email }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ equipe.adresse }}</td>
                    </tr>
                    <tr>
                        <th>Region</th>
                        <td>{{ equipe.region }}</td>
                    </tr>
                    <tr>
                        <th>Ville</th>
                        <td>{{ equipe.ville }}</td>
                    </tr>
                    <tr>
                        <th>Pays</th>
                        <td>{{ equipe.pays }}</td>
                    </tr>
                    <tr>
                        <th>Telephone</th>
                        <td>{{ equipe.telephone }}</td>
                    </tr>
                    <tr>
                        <th>Website</th>
                        <td>{{ equipe.website }}</td>
                    </tr>
                    
                </tbody>
                
            </table>
              <HR noshade size="10%" width="100%" align="center">

    
    
        <h3>Contacter / {{ equipe.noms }}, {{ equipe.fonction }}</h3>
        </br>
        <a href="#" class="btn btn-primary" id="contactButton" {% if form.vars.submitted %} style="display: none" {% endif %}>  Contacter / {{ equipe.noms }}, {{ equipe.fonction }}</a>
            
         <div id="contactform" class"mt-4"{% if not form.vars.submitted %} style="display: block" {% endif %}>
     
                {{ form_start(form)}}
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.firstname) }}</div>
                    <div class="col-md-6">{{ form_row(form.lastname) }}</div>
                </div>
                 <div class="row">
                    <div class="col-md-6">{{ form_row(form.phone) }}</div>
                    <div class="col-md-6">{{ form_row(form.email) }}</div>
                </div>
                {{ form_rest(form)}}
                  <div class="form-group">
                        <button class="btn btn-primary"> Envoyez </button>
                    </div>
                {{ form_end(form)}}
                
            </div>

        </article>
        
        <!-- /Article -->

    
    <!-- Sidebar -->
	<aside class="col-md-4 sidebar sidebar-right">
            {{ include('administrator/tools/_aside.html.twig') }}
	</aside>
           
</div>
            
	
    <a  href="{{ path('equipe_index') }}" class="btn btn-primary btn-sm"> Liste des Membres </a>

</div>
           
{% endblock %}
